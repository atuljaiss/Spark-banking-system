<%- include("header") %>
<div class="container">
    <h1>Transfer Money</h1>
    <div class=row>
        <div class="col col-md-6">
            <div class="box">
                <div class="transfer_image">
                    <img width="120px" src="image/transfer1.png"><br>
                </div>
                <form action="/transfer" method="post">
                    <label>Sender </label><br>
                    <input type="email" name="sender" placeholder="Enter sender email" required=true><br>
                    <label>Recipient</label><br>
                    <input type="email" name="recipient" placeholder="Enter recipient email" required="true"><br>
                    <label>Amount :</label>
                    <input type="number" name="amount" max="10000" min="1" placeholder="Enter the Amount" required="true">
                    <button type="submit" class="btn btn-primary" >Send</button>
                </form>
            </div>

        </div>
        <div class="col col-md-6">
            <img width="500px"src="image/money-transfer.png">

        </div>

    </div>
   
</div>
<%- include("footer") %>
